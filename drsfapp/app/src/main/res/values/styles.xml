<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_layout">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="menu_text">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>


    <style name="firmware_update_text">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="menu_divider">
        <item name="android:background">@color/drawer_divider</item>
    </style>

    <style name="device_divider">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:background">@color/obd_divider</item>
    </style>

    <style name="bottom_btn">
        <item name="android:background">@drawable/back_btn</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="obd_setting_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>
    <style name="obd_setting_radio_btn">
       <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/radio_text</item>
        <item name="android:buttonTint">@color/radio_btn</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="setting_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="blue_btn_text">
        <item name="android:background">@color/btn_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_style_table_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_style_table_col">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="marginHorizontal">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>






    <style name="Theme.DrSafe.headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_20_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:lineSpacingExtra">25px</item>
    </style>

    <style name="Theme.DrSafe.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_24_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_28_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_34_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.title" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
    </style>

    <style name="Theme.DrSafe.caption1" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Theme.DrSafe.caption2" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_12_sp</item>
        <item name="android:textColor">@color/colorSecondary</item>
    </style>

    <style name="Theme.DrSafe.Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_16_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.DrSafe.Button.Small" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/figtree</item>
        <item name="android:textSize">@dimen/text_14_sp</item>
        <item name="android:textColor">@color/colorOnSurface</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="Theme.DrSafe.AlertDialog" parent="Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowMinWidthMajor">65%</item>
        <item name="android:windowMinWidthMinor">80%</item>
        <item name="dialogCornerRadius">12dp</item>
    </style>

    <style name="Theme.DrSafe.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/radio_btn_bg</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textAppearance">@style/Theme.DrSafe.Button</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/adapter_text_color</item>
    </style>

</resources>
