<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/cardRoot"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="@dimen/generic_padding"
        android:checkable="true"
        app:cardBackgroundColor="@color/white"
        android:elevation="0dp"
        app:strokeColor="@color/item_brand_bg_color"
        app:strokeWidth="1dp"
        app:checkedIcon="@null"
        app:cardCornerRadius="@dimen/generic_padding">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tvBrand"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/generic_padding"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:padding="@dimen/generic_padding"
                android:textAppearance="@style/Theme.DrSafe.Button"
                android:textStyle="bold"
                tools:text="Hyundai" />

            <ImageView
                android:id="@+id/imgSelect"
                android:layout_width="@dimen/image_28dp"
                android:layout_height="@dimen/image_28dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/generic_padding"
                android:padding="@dimen/generic_small_padding"
                android:src="@drawable/ic_circle_unselected" />
        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>
</layout>
