<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/generic_large_padding"
        android:layout_marginVertical="@dimen/generic_small_padding"
        android:background="@drawable/current_score_bg"
        android:elevation="4dp"
        android:padding="@dimen/generic_large_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/imgUser"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="@dimen/generic_small_padding"
            android:src="@drawable/ic_add_contact"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvContact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/generic_large_padding"
            android:text="Add Emergency Contanct"
            android:textAppearance="@style/Theme.DrSafe.body"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/imgUser"
            app:layout_constraintStart_toEndOf="@id/imgUser"
            app:layout_constraintTop_toTopOf="@id/imgUser" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
