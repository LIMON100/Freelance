<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="menu_layout">
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="menu_text">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="firmware_update_text">
        <item name="android:textSize">@dimen/drawer_text_size</item>
        <item name="android:textColor">@color/color_black</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="menu_divider">
        <item name="android:background">@color/drawer_divider</item>
    </style>

    <style name="device_divider">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:layout_marginRight">25dp</item>
        <item name="android:background">@color/obd_divider</item>
    </style>

    <style name="bottom_btn">
        <item name="android:background">@drawable/back_btn</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="obd_setting_text">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>
    <style name="obd_setting_radio_btn">
       <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/radio_text</item>
        <item name="android:buttonTint">@color/radio_btn</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="setting_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="blue_btn_text">
        <item name="android:background">@color/btn_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="text_style_table_row">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="text_style_table_col">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="marginHorizontal">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:fontFamily">@font/notosans_regular</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>
