<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.DrSafe" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.DrSafe" parent="Base.Theme.DrSafe">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <item name="colorError">@color/colorCritical</item>
        <item name="colorOnError">@color/colorOnSurface</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Dtg" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/btn_color</item>
        <item name="colorPrimaryVariant">@color/btn_color</item>
        <item name="colorOnPrimary">@color/btn_color</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/btn_color</item>
        <item name="colorSecondaryVariant">@color/btn_color</item>
        <item name="colorOnSecondary">@color/btn_color</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="actionBarSize">56dp</item>


    </style>


    <style name="grey_title_text">
        <item name="android:background">@color/grey_title</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="blue_btn_text">
        <item name="android:background">@color/btn_color</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="vehicle_register_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanum_gothic_bold</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">23dp</item>
    </style>


    <style name="vehicle_register_inputtext">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanum_gothic_regular</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:backgroundTint">@color/grey_title</item>
        <item name="android:textColorHint">@color/hint_color</item>
    </style>

    <style name="login_input">
        <item name="android:textColor">@color/btn_color</item>
        <item name="android:fontFamily">@font/nanum_gothic_regular</item>
        <item name="android:textSize">18sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:background">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/login_hint</item>
    </style>


    <style name="setting_text">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/nanum_square_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
</resources>