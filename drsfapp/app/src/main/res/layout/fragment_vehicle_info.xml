                    <!--                    android:dropDownAnchor=""-->
                    <!--                    android:drawableEnd="@drawable/baseline_arrow_drop_down_24"-->
                    <!--                    android:padding="16dp"-->
                    <!--                    android:textColor="@color/white" />-->
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:id="@+id/edCarType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/spinner_bg"
                        android:entries="@array/car_types"
                        android:padding="16dp"
                        android:popupBackground="@drawable/spinner_popup_bg" />


                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edDeviceInfoMac"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/register_edittext_bg"
                        android:fontFamily="@font/notosans_regular"
                        android:hint="@string/device_mac"
                        android:padding="16dp"
                        android:textColor="@color/gray_100"
                        android:textColorHint="@android:color/darker_gray" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edLocationProvince"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:layout_marginTop="25dp"
                        android:editable="false"
                        android:background="@drawable/register_edittext_bg"
                        android:fontFamily="@font/notosans_regular"
                        android:hint="@string/location"
                        android:inputType="none"
                        android:padding="16dp"
                        android:textColor="@color/gray_100"
