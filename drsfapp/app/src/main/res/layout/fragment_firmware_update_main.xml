<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_white"
        android:clickable="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_white"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/ll_Version"
                    style="@style/menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_menu_item_height"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/version" />

                    <TextView
                        android:id="@+id/tv_version"
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/notosans_medium"
                        android:text="V1.2"
                        android:textColor="@color/color_light_blue" />


                </RelativeLayout>

                <View
                    android:id="@+id/vline"
                    style="@style/menu_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <RelativeLayout
                    android:id="@+id/ll_Version2"
                    style="@style/menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_menu_item_height"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lastest_version" />

                    <TextView
                        android:id="@+id/tv_version2"
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/notosans_medium"
                        android:text="V1.2"
                        android:textColor="@color/color_light_blue" />


                </RelativeLayout>

                <View
                    style="@style/menu_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <RelativeLayout
                    style="@style/menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_menu_item_height"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosans_regular"
                        android:text="@string/select_mode" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center">

                        <ToggleButton
                            android:id="@+id/mode_onoff"
                            android:layout_width="60dp"
                            android:layout_height="35dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/toogle_selector"
                            android:checked="false"
                            android:textOff=""
                            android:textOn="" />

                    </LinearLayout>
                </RelativeLayout>

                <View
                    style="@style/menu_divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp" />

                <TextView
                    android:id="@+id/tv_update_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/notosans_regular"
                    android:text="@string/tv_lastest_version"
                    android:textColor="@color/color_black"
                    android:textSize="@dimen/drawer_text_size"
                    android:visibility="visible" />

                <RelativeLayout
                    style="@style/menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_menu_item_height"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/update_notification" />

                    <ToggleButton
                        android:id="@+id/toggle_update_notification"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toogle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>


                <RelativeLayout
                    style="@style/menu_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_menu_item_height"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_update" />

                    <ToggleButton
                        android:id="@+id/toggle_auto_update"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toogle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/drawer_menu_item_height"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <TextView
                        style="@style/firmware_update_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/auto_update" />

                    <ToggleButton
                        android:id="@+id/toggle_auto_update2"
                        android:layout_width="60dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/toogle_selector"
                        android:checked="false"
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/iv_update"
                style="@style/bottom_btn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_button_save"
                android:text="@string/update" />
        </RelativeLayout>
    </FrameLayout>
</layout>
