<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textView7"
            android:layout_width="300dp"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_height="0dp"
            android:layout_marginTop="48dp"
            android:fontFamily="@font/notoaans_bold"
            android:text="Intelligent Speed Limit Installer App"
            android:textColor="@color/color_black"
            android:textSize="22sp"
            android:layout_marginHorizontal="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.15" />


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edtIntallerId"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/edt_txt_bg"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_marginTop="48dp"
            android:src="@drawable/dr_safe_logo"
            app:layout_constraintEnd_toEndOf="@+id/textView7"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />
        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text="@string/user_id"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            app:layout_constraintBottom_toTopOf="@+id/edtIntallerId"
            app:layout_constraintStart_toStartOf="@+id/edtIntallerId" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edPassword"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:background="@drawable/edt_txt_bg"
            android:inputType="textPassword"
            android:padding="8dp"
            android:singleLine="true"
            android:layout_marginTop="4dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/textView13"
            app:layout_constraintStart_toStartOf="@id/edtIntallerId"
            app:layout_constraintEnd_toEndOf="@id/edtIntallerId" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginBottom="8dp"
            android:text="Password"
            android:layout_marginTop="16dp"
            android:textColor="@color/black_color"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/edtIntallerId"
            app:layout_constraintStart_toStartOf="@+id/edPassword" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogin"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_login_distributor"
            android:text="@string/login"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/edPassword"
            app:layout_constraintEnd_toEndOf="@+id/edPassword"
            app:layout_constraintStart_toStartOf="@+id/edPassword"
             />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
