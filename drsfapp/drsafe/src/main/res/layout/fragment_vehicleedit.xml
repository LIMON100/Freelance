<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/colorSurface"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                app:layout_constraintBottom_toTopOf="@+id/btnConfirm"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintEnd_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <LinearLayout
                    android:id="@+id/llBrand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/generic_large_padding"
                    android:layout_marginTop="@dimen/generic_large_padding"
                    android:background="@drawable/update_row_bg"
                    android:padding="@dimen/padding_10dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="@dimen/image_28dp"
                        android:layout_height="@dimen/image_28dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_brand" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:text="@string/brand"
                        android:textAppearance="@style/Theme.DrSafe.Button"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tvBrand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:textAppearance="@style/Theme.DrSafe.Button"

                        tools:text="Hyundai" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llModel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/generic_large_padding"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:background="@drawable/update_row_bg"
                    android:padding="@dimen/padding_10dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="@dimen/image_28dp"
                        android:layout_height="@dimen/image_28dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_brand" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:text="@string/model"
                        android:textAppearance="@style/Theme.DrSafe.Button"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tvModel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:textAppearance="@style/Theme.DrSafe.Button"

                        tools:text="i10" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llFuelType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/generic_large_padding"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:background="@drawable/update_row_bg"
                    android:padding="@dimen/padding_10dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="@dimen/image_28dp"
                        android:layout_height="@dimen/image_28dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_fuel_type" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:text="@string/fuel_type"
                        android:textAppearance="@style/Theme.DrSafe.Button"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tvFuelType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:textAppearance="@style/Theme.DrSafe.Button"

                        tools:text="Gasoline" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/llYearOfManufacture"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/generic_large_padding"
                    android:layout_marginTop="@dimen/padding_10dp"
                    android:background="@drawable/update_row_bg"
                    android:padding="@dimen/padding_10dp"
                    tools:ignore="UselessParent">

                    <ImageView
                        android:layout_width="@dimen/image_28dp"
                        android:layout_height="@dimen/image_28dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_calendar2" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:text="@string/year_of_manufacture"
                        android:textAppearance="@style/Theme.DrSafe.Button"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/tvYear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:padding="@dimen/generic_padding"
                        android:textAppearance="@style/Theme.DrSafe.Button"

                        tools:text="2020" />

                </LinearLayout>


            </LinearLayout>


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnConfirm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_margin="@dimen/generic_padding"
                android:background="@drawable/generic_btn_bg"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:textAppearance="@style/Theme.DrSafe.Button"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</layout>
