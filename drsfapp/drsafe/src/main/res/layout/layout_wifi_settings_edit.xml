<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:showIn="@layout/fragment_master_device">

        <TextView
            android:id="@+id/tvWifiSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/generic_large_padding"
            android:gravity="center"
            android:text="@string/wi_fi_setting"
            android:textAppearance="@style/Theme.DrSafe.Button"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/llWifiSettings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/generic_padding"
            android:layout_marginEnd="@dimen/generic_large_padding"
            android:background="@drawable/update_row_bg"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/tvWifiSetting"
            app:layout_constraintTop_toBottomOf="@id/tvWifiSetting">




            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/generic_large_padding">

                <ImageView
                    android:layout_width="@dimen/image_28dp"
                    android:layout_height="@dimen/image_28dp"
                    android:src="@drawable/ic_wifi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/generic_small_padding"
                    android:layout_weight="1"
                    android:padding="@dimen/generic_small_padding"
                    android:text="@string/wifi_id"
                    android:textAppearance="@style/Theme.DrSafe.caption1"
                    android:textColor="@color/colorOnSurface"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etWifiId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/generic_small_padding"
                    android:text="@string/app_name"
                    android:textAppearance="@style/Theme.DrSafe.Button.Small"
                    android:textColor="@color/colorOnSurface"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/generic_large_padding">

                <ImageView
                    android:layout_width="@dimen/image_28dp"
                    android:layout_height="@dimen/image_28dp"
                    android:src="@drawable/ic_wifi_password" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/generic_small_padding"
                    android:layout_weight="1"
                    android:padding="@dimen/generic_small_padding"
                    android:text="@string/wifi_password"
                    android:textAppearance="@style/Theme.DrSafe.caption1"
                    android:textColor="@color/colorOnSurface"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/etWifiPass"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/generic_small_padding"
                    android:text="abcabc123!"
                    android:textAppearance="@style/Theme.DrSafe.Button.Small"
                    android:textColor="@color/colorOnSurface"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorLine" />



        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/generic_padding"
        android:background="@drawable/generic_btn_bg"
        android:minHeight="48dp"
        android:text="@string/save"
        android:textAppearance="@style/Theme.DrSafe.Button"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:padding="@dimen/generic_large_padding"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:padding="@dimen/generic_large_padding"
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/generic_padding"
        android:layout_marginBottom="@dimen/generic_padding"
        android:textAppearance="@style/Theme.DrSafe.Button"
        android:textStyle="bold"
        android:background="@drawable/outline_btn_bg"
        android:text="@string/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/btnSave"
        app:layout_constraintTop_toBottomOf="@id/btnSave"
/>
</LinearLayout>



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
